<div class="container">
    <div class="row">
        <div class="col-lg-12">
            <h1>Hotel Database</h1>
        </div>
    </div>
</div>

<!-- Search -->
<div class="container">
    <form method="POST" action="/search">
        <label for="searchTerm">Enter the phone number</label>
        <input type="search" name="searchTerm" id="searchTerm" class="form-control" placeholder="Search guest" aria-label="search">
    </form>
</div>


<!-- Delete/Update Form -->

 <div class="container">
    <div class="row my-4">
        <div class="col-lg-12">
            <% if(message) {%>
                <div class="alert alert-<%= message.type %>" role="alert">
                    <strong><%= message.message%></strong>
                    </button>
                </div>
            <% } %>
            <div class="table-responsive">
                    <table class="table table-striped text-center">
                         <thead>
                            <tr class="table-dark">
                                <th>Name</th>
                                <th>Phone</th>
                                <th>Email</th>
                                <th>Date</th>
                                <th>Room Number</th>
                                <th>Edit</th>
                                <th>Delete</th>
                            </tr>
                        </thead>
                        <tbody>
                        <% if(guests != "") {%>
                            <% guests.forEach(function(guest, index){ %>
                                <tr class="align-middle">
                                    <td><%= guest.name %></td>
                                    <td><%= guest.phone_number %></td>
                                    <td><%= guest.email %></td>
                                    <td><%= guest.date %></td>
                                    <td><%= guest.room_number %></td>
                                    <td>
                                        <a href="/edit-guest/<%= guest._id%>" class="text-success"><i class="fas fa-edit fa-lg mx-1"></i></a>
                                    </td>
                                    <td>
                                        <a href="/delete-guest/<%= guest._id%>" class="text-danger"><i class="fas fa-trash fa-lg mx-1"></i></a>
                                    </td>
                                </tr>
                                <% }) %>
                        </tbody>
                    </table>
                <% } else { %>
                    <h1 class="text-center text-secondary mt-5">No users found in the database</h1>
                <% } %>
            </div>
        </div>
    </div>
</div>  
